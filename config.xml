<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.project_ad" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <hook type="before_prepare" src="scripts/pre_build.js" />
    <name>Project AD</name>
    <description>
      An Apache Cordova application for project Alzheimer's disease.
    </description>
    <author email="hemanth.vja@gmail.com" href="https://www.linkedin.com/in/naga-hemanth-perla/">
        Naga Perla
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="http://127.0.0.1:3001" name="ec-nav"/>
</widget>
